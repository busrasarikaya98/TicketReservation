@{
    ViewData["Title"] = "Seat Update";
}
<form action="/Seats/Save" method="post">
    @{ if (ViewBag.message != null)
    {
    <div class="alert alert-danger">@ViewBag.message</div>
    }
    }
    <div class="mb-3">
        <label class="form-label">Number</label>
        <input type="text" name="Number" class="form-control" value="@ViewBag.seat.Number">
    </div>
    <input type="hidden" name="Id" value="@ViewBag.seat.Id">
    <button type="submit" class="btn btn-success  col-md-3">Update</button>
</form>